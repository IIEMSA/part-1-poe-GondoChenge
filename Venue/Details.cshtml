@model VenueBookingSystemCode.Models.Venues

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Venues</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.venue_name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.venue_name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.location_of_venue)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.location_of_venue)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.capacity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.capacity)
        </dd>
        <!-- Step 7: Replace image_url display for the real image-->
        <dt class="col-sm-2">
            Venue Image
        </dt>


        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.image_url))
            {
                <img src="@Model.image_url" alt="Venue Image" width="100" height="100" style="object-fit:cover; border-radius:8px;" />
            }
            else
            {
                <span>No Image Available</span>
            }




        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.venue_id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
