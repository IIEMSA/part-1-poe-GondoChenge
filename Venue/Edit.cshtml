@model VenueBookingSystemCode.Models.Venues

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Venues</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        <!-- // This is step 4a(1) Add enctype for the file upload-->
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="venue_id" />
            <div class="form-group">
                <label asp-for="venue_name" class="control-label"></label>
                <input asp-for="venue_name" class="form-control" />
                <span asp-validation-for="venue_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="location_of_venue" class="control-label"></label>
                <input asp-for="location_of_venue" class="form-control" />
                <span asp-validation-for="location_of_venue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="capacity" class="control-label"></label>
                <input asp-for="capacity" class="form-control" />
                <span asp-validation-for="capacity" class="text-danger"></span>
            </div>


            <!-- //This is step 4B (11): Add enctype for file upload -->
            @if (!string.IsNullOrEmpty(Model.image_url))
            {

                <div class="form-group">
                <label> Current Image</label><br />
                    <img src="@Model.image_url" alt="Venue Image" width="100" height="100" style="object-fit:cover; border-radius:8px;" />

                </div>
            }

            <!-- Allow uploading a new image -->
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" type="file" class="form-control" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>




            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
