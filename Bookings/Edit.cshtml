@model VenueBookingSystemCode.Models.Bookings

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Bookings</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="booking_id" />
            <div class="form-group">
                <label asp-for="event_id" class="control-label"></label>
                <select asp-for="event_id" class="form-control" asp-items="ViewBag.event_id"></select>
                <span asp-validation-for="event_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="venue_id" class="control-label"></label>
                <select asp-for="venue_id" class="form-control" asp-items="ViewBag.venue_id"></select>
                <span asp-validation-for="venue_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="booking_date" class="control-label"></label>
                <input asp-for="booking_date" class="form-control" />
                <span asp-validation-for="booking_date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
